{% extends 'base.html.twig' %}

{% block body %}
    <h1>File</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ file.id }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ file.fileName }}</td>
            </tr>
            <tr>
                <th>Metadata</th>
                <td>
                    <ul>            
                        {%for key, file in file.metadata %}
                            {% if file is not iterable %}
                                <li>
                                    {{ key }} - {{ file|e }}
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('file_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
