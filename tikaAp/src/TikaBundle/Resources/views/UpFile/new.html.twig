{#{% extends 'base.html.twig' %}#}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{% block add_file %}
    <div class="row">
        <h1 class="text-center">File creation</h1>
        <div class="col-md-3"></div>
        <div class="col-md-3">
            {{ form_start(form, { 'attr': {'class':'form-horizontal'}}) }}
            {{ form_widget(form.fileName, { 'attr': {'class':'btn center-block'} }) }}
            <input class='btn center-block' type="submit" value="Create" />
            {{ form_end(form) }}
        </div>
        <div class="col-md-3">
            <form id='searchForm' action="#" method="GET" class="form-horizontal text-center center-block" data-href="{{ path('file_index_by_name') }}">
                File name:<br>
                <input type="text" name="fileName"><br>
                <input class='btn center-block' type="submit" value="Search" />
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}
